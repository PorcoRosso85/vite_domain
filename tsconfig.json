{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "types": ["vitest/importMeta", "vitest/globals", "jest", "node"],

    "removeComments": true,

    // 明示的にcommonjs, esmoduleの相互運用を有効化
    "esModuleInterop": true,
    // "moduleDetection":

    // debugログ
    "traceResolution": false,

    // where to compile
    // "rootDir": "./src",
    "outDir": "./dist/server",

    // resolve module name
    "baseUrl": "./src",

    "paths": {
      "external/*": ["../external/*"]
    },
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
    // "external/gen_lsif/protocol/src/protocol/*.ts"
  ],
  // "exclude": ["node_modules", "src/ui/**/*"],
  "exclude": ["node_modules", "**/*samples*/*"]
}
