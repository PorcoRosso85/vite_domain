{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    
    "types": [
      "vitest/importMeta",
      "vitest/globals",
    ],

    "paths": {
      "src/*": ["./src*"],
      "external/*": ["./external"],
      "public/*": ["./public"],
    },
    
    // where to compile
    "rootDir": "./src",
    "outDir": "./dist",
    
    // resolve module name
    "baseUrl": "./src"
  },
  "include": ["src"],
  "exclude": ["node_modules"],
}
